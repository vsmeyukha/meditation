# Verify formatting on files changed in the last commit
CHANGED_FILES=$(git diff-tree -r --name-only --diff-filter=ACMRTUXB HEAD | grep -E '\\.(ts|tsx|js|jsx|json|md)$' || true)

if [ -n "$CHANGED_FILES" ]; then
  echo "husky(post-commit): checking prettier on committed files..."
  npx --no -- prettier --check $CHANGED_FILES
fi


